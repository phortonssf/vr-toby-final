ion-app{
    max-width: 900px;
    margin: auto;
    display: block;
    position: relative;
}

ion-content  {
    background-color: $background-color;
    margin: auto;
    display: flex;
    
}

.back-button.show-back-button {
    display: inline-block;
    font-size: 1rem;
}

img {
    border-radius: 10px;
    display: block;
}

.view-wrapper{
    display: flex;
    align-items: center;
    justify-content: start;
    max-width: 70vw;
    margin-right: auto;
    margin-left: auto;
    margin-top: 15vh;
}

