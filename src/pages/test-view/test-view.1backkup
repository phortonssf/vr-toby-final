<ion-header>
  <ion-navbar hideBackButton>
    <ion-title align="center"> {{ testTitle }} </ion-title>
    <ion-buttons end>
      <button ion-button (click)="closeTest()">
        Close
      </button>
    </ion-buttons>
  </ion-navbar>
</ion-header>

<ion-content class="no-scroll">
  <div id="fullscreen-flex">
    <div id="content-wrapper">
      <!--Portrait View-->
      <ion-grid class="view-wrapper">
        <ion-col id="bar">
          <progress-bar [progress]="loadProgress"></progress-bar>
        </ion-col>

        <ion-row id="test-row">
          <ion-col id="main-col">
            <img id="main-img" (click)="imageZoom()" [src]="viewPic" />
          </ion-col>

          <ion-col id="right-col">
            <ion-row id="thumbnails-row">
              <ion-col class="photos-col" *ngFor='let photo of photos; let i = index'>
                <!-- 
              <ion-row *ngIf="photos.length == 2 && i == 0"><h5>Right Side</h5></ion-row>
              <ion-row *ngIf="photos.length == 2 && i == 1"><h5>VD</h5></ion-row>
              <ion-row *ngIf="photos.length > 2 && i == 0"><h5>Left Side</h5></ion-row>
              <ion-row *ngIf="photos.length > 2 && i == 1"><h5>Right Side</h5></ion-row>
              <ion-row *ngIf="photos.length > 2 && i == 2"><h5>VD</h5></ion-row> -->
                <ion-row class="inner-pic-row">
                  <ion-col width-30>
                    <img class="thumbnails" (click)="selectImage(photo.url, i)" [src]="photo.url" />
                  </ion-col>
                  <ion-col>
                    <ion-row class="button-row">
                      <ion-col>
                        <button ion-button clear color="dark" (click)="imageZoom(i)">{{zoom}}</button>
                      </ion-col>
                      <ion-col>
                        <button ion-button clear color="dark" (click)="presentActionSheet(i)">{{heart[i]}}</button>
                      </ion-col>
                    </ion-row>
                  </ion-col>
                </ion-row>
              </ion-col>
            </ion-row>
          </ion-col>
        </ion-row>
        <div id='answer-container'>
          <ion-row id="answer-row">
            <ion-col width-33>
              <button ion-button small color="dark" align="center" (click)="selectAnswer('Normal')">Normal</button>
            </ion-col>
            <ion-col width-33>
              <button ion-button small color="dark" align="center" (click)="selectAnswer('Undetermined')">Undetermined</button>
            </ion-col>
            <ion-col width-33>
              <button ion-button small color="dark" align="center" (click)="answerActionSheet('Enlarged')">Enlarged</button>
            </ion-col>
          </ion-row>
        </div>
      </ion-grid>
    </div>
  </div>
